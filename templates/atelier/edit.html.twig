{% extends 'base.html.twig' %}

{% block title %}Modifier Atelier{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center fw-bold">Modifier Atelier : {{ atelier.nom }}</h1>

        <div class="card">
            <div class="card-body">
                {{ include('atelier/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_atelier_index') }}" class="btn btn-secondary">Retour à la liste</a>
            {{ include('atelier/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
