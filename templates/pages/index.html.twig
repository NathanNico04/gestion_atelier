{% extends 'base.html.twig' %}

{% block title %}Platforme des Ateliers{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <h1 class="display-4 fw-bold mb-4">Plateforme des Ateliers</h1>
            <p class="lead mb-5">Projet Réalisé en Symfony pour le CC1 de Framework Web</p>
        </div>
    </div>

    <div class="row g-4 py-5">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 rounded-3 text-center">
                <div class="card-body p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <i class="bi-book" style="font-size: 1.5rem;"></i>
                    </div>
                    <h3 class="fs-4 fw-bold">Apprenti</h3>
                    <p class="text-muted">Rejoignez différents ateliers, notez les ateliers par degré de satisfaction</p>
                    {% if is_granted('ROLE_APPRENTI') %}
                        <a class="btn btn-outline-primary" href="{{ path('app_atelier_index') }}">Site des Apprentis</a>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 rounded-3 text-center">
                <div class="card-body p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <i class="bi-people" style="font-size: 1.5rem;"></i>
                    </div>
                    <h3 class="fs-4 fw-bold">Instructeur</h3>
                    <p class="text-muted">Créez, Modifiez, ou Supprimez des ateliers, consultez les apprentis inscrits aux différents ateliers.</p>
                    {% if is_granted('ROLE_INSTRUCTEUR') %}
                        <a class="btn btn-outline-primary" href="{{ path('app_atelier_index') }}">Site des Instructeurs</a>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 rounded-3 text-center">
                <div class="card-body p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <i class="bi-trophy" style="font-size: 1.5rem;"></i>
                    </div>
                    <h3 class="fs-4 fw-bold">Administrateur</h3>
                    <p class="text-muted">Ajoutez et supprimez des instructeurs, octroyez le rôle d’administrateur à d'autres instructeurs.</p>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-outline-primary" href="{{ path('admin') }}">Site Admin</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-6 text-center">
            <a href="{{ path('app_atelier_index') }}" class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow-sm">
                Découvrir les ateliers
                <i class="bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>

    <footer>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <p class="text-muted">
                        &copy; 2025 Maxou's Company - Plateforme des Ateliers
                    </p>
                </div>
            </div>
        </div>
    </footer>
</div>
{% endblock %}
